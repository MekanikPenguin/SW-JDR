<div class="frame-container d-flex flex-column align-items-center" style="position: relative; width: 100%; height: 100vh;">
  <h2 class="text-success">Donner des points d'xp</h2>

  <%= simple_form_for :xp, url: donner_xp_path, method: :post do |f| %>
    <div class="xp-give-row" data-controller="increment">
      <%= f.label :xp, "XP à donner" %>
      <div class="input-group custom-input-group">
        <%= button_tag "-", type: "button", class: "btn btn-outline-secondary", data: { action: "click->increment#decrement" } %>
        <%= f.number_field :xp, value: 1, min: 1, class: "form-control xp-input", data: { increment_target: "input" } %>
        <%= button_tag "+", type: "button", class: "btn btn-outline-secondary", data: { action: "click->increment#increment" } %>
      </div>
    </div>

    <div class="player-select-row">
      <%= f.label :user_id, "Choisissez un joueur" %>
      <div class="d-flex align-items-center select-wrapper">
        <%= select_tag "object[#{user.id}]", options_for_select(@objects.map { |object| [object.name, object.id] }), class: "donner-objet-select form-select form-select-sm me-2", style: "width: 200px;" %>
        <%= submit_tag "Go", name: "submit_#{user.id}", class: "btn btn-outline-success btn-sm ms-1 p-0", data: { confirm: "Êtes-vous sûr de vouloir donner cet objet ?" } %>
      </div>
    </div>

    <div class="custom-form">
      <%= f.check_box :give_to_all, { checked: true, class: "form-check-input" }, "true", "false" %>
      <%= f.label :give_to_all, "Donner à tous" %>
    </div>

    <div>
      <%= f.submit "Donner", class: "btn btn-success" %>
      <div id="flashMessageContainer" data-xp-form-target="flashMessageContainer"></div>
    </div>
<% end %>

  <%= link_to "Retour", current_user.group.name == "MJ" ? mj_dashboard_path : root_path, class: "btn btn-outline-success go-back" %>
</div>