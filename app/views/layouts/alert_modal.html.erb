<div class="modal fade" id="<%= modal_id %>" tabindex="-1" aria-labelledby="<%= modal_id %>Label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= modal_id %>Label"><%= title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><%= message %></p>
      </div>
      <div class="modal-footer">
        <% if dismiss_button %>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= dismiss_button %></button>
        <% end %>
        <% if confirm_button %>
          <button type="button" class="btn btn-primary" data-action="<%= confirm_action %>"><%= confirm_button %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>