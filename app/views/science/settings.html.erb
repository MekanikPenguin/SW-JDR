<div class="frame-container" style="position: relative; width: 100%; height: 100vh; overflow-y: auto; overflow-x: hidden;">
  <!-- Username -->
  <p class="username-display mt-1 text-primary fw-bold">
    <%= current_user.username.capitalize %>
  </p>
  <!-- Cadre principal SVG -->
  <img src="<%= asset_path('cadre2.svg') %>" alt="Cadre" class="ui-frame">
  
  <!-- Cadre central avec l'écran de réglages -->
  <div class="settings-container">
    <h1 class="text-center">Réglages</h1>

    <%= simple_form_for :engineering, url: update_settings_science_index_path, method: :post do |f| %>
      <div class="skill-section mt-3">
        <div class="d-flex align-items-center">
          <p class="me-2 mt-3">Jet d'ingénierie</p>
          <div class="input-group custom-input-group me-2" style="width: auto;" data-controller="increment">
            <%= button_tag "-", type: "button", class: "btn btn-outline-secondary btn-sm", data: { action: "click->increment#decrement" } %>
            <%= f.number_field :mastery, value: @engineering_skill&.mastery || 0, min: 0, class: "form-control form-control-sm text-center", style: "width: 45px;", data: { "increment-target" => "input" } %>
            <%= button_tag "+", type: "button", class: "btn btn-outline-secondary btn-sm", data: { action: "click->increment#increment" } %>
          </div>
          <span class="mx-1">D +</span>
          <div class="input-group custom-input-group ms-2" style="width: auto;" data-controller="increment">
            <%= button_tag "-", type: "button", class: "btn btn-outline-secondary btn-sm", data: { action: "click->increment#decrement" } %>
            <%= f.number_field :bonus, value: @engineering_skill&.bonus || 0, min: 0, class: "form-control form-control-sm text-center", style: "width: 45px;", data: { "increment-target" => "input" } %>
            <%= button_tag "+", type: "button", class: "btn btn-outline-secondary btn-sm", data: { action: "click->increment#increment" } %>
          </div>
          <p class="ms-2 mt-3">Actuel : <%= @engineering_skill&.mastery || 0 %>D + <%= @engineering_skill&.bonus || 0 %></p>
        </div>
      </div>
      <%= f.button :submit, "Enregistrer", class: "btn btn-outline-success mt-3" %>
    <% end %>
  </div>
  <%= link_to "Retour", science_path, class: "btn btn-outline-secondary go-back mt-3" %>
</div>