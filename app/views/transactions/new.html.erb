<div class="frame-container" style="position: relative; width: 100%; height: 100vh;">
  <!-- Username -->
  <p class="username-display mt-1 text-primary fw-bold">
    <%= current_user.username %>
  </p>
  <!-- Cadre principal SVG -->
  <img src="<%= asset_path('cadre2.svg') %>" alt="Cadre" class="ui-frame">
  <!-- Cadre central avec l'écran de transfert' -->
  <div class="credits-container m-2">
    <p>Transférer des crédits</h1>
    <%= simple_form_for @transaction do |f| %>
      <div class="form-group text-success">
        <%= f.input :receiver_username, label: "Destinataire", input_html: { class: 'form-control', placeholder: 'Entrez le pseudo' } %>
      </div>
      <div class="form-group text-success">
        <%= f.input :amount, label: "Montant", input_html: { class: 'form-control' } %>
      </div>
      <%= f.submit "Transférer", class: "btn btn-outline-success" %>
    <% end %>
  </div>

  <%= link_to "Retour", current_user.group.name == "MJ" ? mj_dashboard_path : root_path, class: "btn btn-outline-success go-back" %>
</div>
