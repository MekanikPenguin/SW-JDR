<div class="frame-container" style="position: relative; width: 100%; height: 100vh;">
  <!-- Username -->
  <p class="username-display mt-1 text-primary fw-bold">
    <%= current_user.username.capitalize %>
  </p>

  <!-- Cadre principal SVG -->
  <img src="<%= asset_path('cadre2.svg') %>" alt="Cadre" class="ui-frame">

  <!-- Détails du familier -->
  <div class="container mt-5">
    <h2 class="text-success text-center">Détails du Familier</h2>
    <ul class="list-group mt-4">
      <li class="list-group-item"><strong>Nom :</strong> <%= @pet.name %></li>
      <li class="list-group-item"><strong>Race :</strong> <%= @pet.race %></li>
      <li class="list-group-item"><strong>PV :</strong> <%= "#{@pet.hp_current} / #{@pet.hp_max}" %></li>
      <li class="list-group-item"><strong>Résistance Corporelle :</strong> <%= @pet.res_corp.to_i %>D + <%= @pet.res_corp_bonus.to_i %></li>
      <li class="list-group-item"><strong>Vitesse :</strong> <%= @pet.speed.to_i %>D</li>
      <li class="list-group-item"><strong>Esquive :</strong> <%= @pet.dodge.to_i %>D</li>
      <li class="list-group-item"><strong>Précision :</strong> <%= @pet.accuracy.to_i %>D</li>
      <li class="list-group-item"><strong>Arme 1 :</strong> <%= @pet.weapon_1 %></li>
      <li class="list-group-item"><strong>Arme 2 :</strong> <%= @pet.weapon_2 %></li>
      <li class="list-group-item"><strong>Dégâts 1 :</strong> <%= @pet.damage_1.to_i %>DD</li>
      <li class="list-group-item"><strong>Dégâts 2 :</strong> <%= @pet.damage_2.to_i %>DD</li>
    </ul>
    <div class="mt-3">
      <% if current_user.pet_id == @pet.id %>
        <%= link_to "Modifier", edit_pet_path(@pet), class: "btn btn-outline-secondary mt-3" %>
        <%= button_to "Dissocier", dissociate_pet_path(@pet), method: :post, class: "btn btn-danger", data: { confirm: "Êtes-vous sûr de vouloir dissocier ce familier ?" } %>
      <% else %>
        <%= button_to "Associer", associate_pet_path(@pet), method: :post, class: "btn btn-success" %>
      <% end %>
    </div>
    <%= link_to "Supprimer", pet_path(@pet), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer ce familier ?" }, class: "btn btn-outline-danger mt-3" %>
  </div>

  <%= link_to "Retour", pets_path, class: "btn btn-outline-secondary go-back" %>
</div>