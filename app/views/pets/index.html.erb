<div class="frame-container" style="position: relative; width: 100%; height: 100vh; overflow-y: auto; overflow-x: hidden;">
  <!-- Username -->
  <p class="username-display mt-1 text-primary fw-bold">
    <%= current_user.username.capitalize %>
  </p>

  <!-- Cadre principal SVG -->
  <img src="<%= asset_path('cadre2.svg') %>" alt="Cadre" class="ui-frame">

  <!-- Liste des familiers -->
  <div class="container mt-5">
    <h2 class="text-success text-center">Liste des Familiers</h2>
    <table class="table table-striped mt-4">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Race</th>
          <th>Points de vie</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @pets.each do |pet| %>
          <tr>
            <td><%= pet.name %></td>
            <td><%= pet.race %></td>
            <td><%= "#{pet.hp_current} / #{pet.hp_max}" %></td>
            <td>
              <%= link_to "Voir", pet_path(pet), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "Modifier", edit_pet_path(pet), class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to "Supprimer", pet_path(pet), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer ce familier ?" }, class: "btn btn-outline-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Créer un Familier", new_pet_path, class: "btn btn-success mt-3" %>
  </div>

  <%= link_to "Retour", current_user.group.name == "MJ" ? mj_dashboard_path : root_path, class: "btn btn-outline-secondary go-back" %>
</div>